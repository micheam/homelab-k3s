# Minecraft Fabric Server Configuration
# Copy this file to config.env and modify values

EULA=TRUE
VERSION=1.21.8
TYPE=FABRIC
MEMORY=4G
DIFFICULTY=normal
GAMEMODE=survival
MAX_PLAYERS=10
VIEW_DISTANCE=10

# Modrinth mod downloads
# These mods will be automatically downloaded on server start
MODRINTH_PROJECTS=fabric-api,sodium,lithium,iris
MODRINTH_DOWNLOAD_DEPENDENCIES=required

# Performance optimizations
USE_AIKAR_FLAGS=true

# Sensitive values - modify these!
RCON_PASSWORD=changeme
OPS=your_minecraft_username
WHITELIST=user1,user2,user3

# Server properties
MOTD=Minecraft Fabric Server with Performance Mods
ENABLE_COMMAND_BLOCK=true
SPAWN_PROTECTION=16